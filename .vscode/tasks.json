{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Compile", //修改此项
      "command": "D:\\code\\mingw64\\bin\\g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "D:\\code\\mingw64\\bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "c++",
      "command": "clang++",
      "type": "shell",
      "args": ["-g", "${file}", "-std=c++11", "-g"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
